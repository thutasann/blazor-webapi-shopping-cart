@inherits DisplayProductsBase

@foreach (var item in Products) {
    <div class="col-md-3 mb-2">
        <a href="#">
            <div class="card">
                <img src="@item.ImageURL" alt="@item.Name" class="img-thumbnail">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @item.Name
                    </h5>
                    <p class="card-text">
                        <b> @item.Price.ToString("C")</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}  